            </HBox>

            <!-- Filter Panel -->
            <Panel class="filterPanel">
                <HBox alignItems="Center" justifyContent="SpaceBetween">
                    <HBox alignItems="Center">
                        <Label text="Request No:" class="sapUiSmallMarginEnd"/>
                        <Input width="150px" value="{/filter/requestNo}" liveChange="onFilterChange"/>
                        <Label text="Created By:" class="sapUiSmallMarginEnd"/>
                        <Input width="150px" value="{/filter/createdBy}" liveChange="onFilterChange"/>
                        <Label text="Created on:" class="sapUiSmallMarginEnd"/>
                        <DatePicker width="150px" value="{/filter/createdOn}" change="onFilterChange"/>
                        <Label text="Status:" class="sapUiSmallMarginEnd"/>
                        <ComboBox width="150px" items="{/statusItems}" selectedKey="{/filter/status}" change="onFilterChange">
                            <core:Item key="{key}" text="{text}"/>
                        </ComboBox>
                    </HBox>
                    <Button text="Clear" press="onClearFilters" type="Transparent"/>
                </HBox>
            </Panel>

            <!-- Icon Tab Bar with Create Button -->
            <IconTabBar id="requestsTabBar" select="onTabSelect" expandable="false" class="sapUiResponsiveMargin">
                <items>
                    <IconTabFilter text="Requests" key="all" count="{/allCount}">
                        <VBox>
                            <Toolbar>
                                <Button icon="sap-icon://add" text="Create" press="onCreatePress" type="Emphasized"/>
                            </Toolbar>
                            <Table id="dashboardTable" items="{/requests}" 
                                   mode="SingleSelectMaster" itemPress="onItemPress" growing="true" growingThreshold="10">
                                <columns>
                                    <Column width="15%"><Text text="Request No" /></Column>
                                    <Column width="15%"><Text text="Created By" /></Column>
                                    <Column width="15%"><Text text="Created On" /></Column>
                                    <Column width="15%"><Text text="Status" /></Column>
                                    <Column width="15%"><Text text="Remarks" /></Column>
                                    <Column width="15%"><Text text="Pending With" /></Column>
                                    <Column width="10%"><Text text="Request Aging" /></Column>
                                </columns>
                                <items>
                                    <ColumnListItem type="Navigation">
                                        <cells>
                                            <Text text="{requestNo}" />
                                            <Text text="{createdBy}" />
                                            <Text text="{createdOn}" />
                                            <ObjectStatus text="{status}" 
                                                state="{= ${status} === 'Send Back' ? 'Warning' : ${status} === 'Rejected' ? 'Error' : ${status} === 'Pending Request' ? 'Information' : 'None'}" />
                                            <Text text="{remarks}" />
                                            <Text text="{pendingWith}" />
                                            <Text text="{requestAging}" />
                                        </cells>
                                    </ColumnListItem>
                                </items>
                            </Table>
                        </VBox>
                    </IconTabFilter>
                </items>
            </IconTabBar>

            <!-- Request Details Dialog -->
            <Dialog id="requestDetailsDialog" title="Request Details" contentWidth="800px" stretch="{device>/system/phone}">
                <content>
                    <VBox class="sapUiSmallMargin">
                        <Toolbar>
                            <ToolbarSpacer/>
                            <Button icon="sap-icon://save" text="Save" press="onSaveRequest" type="Accept" tooltip="Save Request"/>
                            <Button icon="sap-icon://print" text="Print" press="onPrintRequest" type="Default" tooltip="Print Request"/>
                            <Button icon="sap-icon://decline" text="Exit" press="onCloseRequest" type="Reject" tooltip="Close Dialog"/>
                            <Button icon="sap-icon://edit" text="Edit" press="onEditRequest" type="Default" tooltip="Toggle Edit Mode"/>
                        </Toolbar>

                        <!-- IconTabBar for Request Details -->
                        <IconTabBar id="requestDetailsTabBar" class="sapUiResponsiveMargin" select="onDetailsTabSelect">
                            <items>
                                <IconTabFilter text="Info" key="info" icon="sap-icon://hint">
                                    <form:SimpleForm layout="ResponsiveGridLayout" editable="true">
                                        <Label text="Request No:"/>
                                        <Text text="{/selectedRequest/requestNo}"/>
                                        <Label text="Created By:"/>
                                        <Text text="{/selectedRequest/createdBy}"/>
                                        <Label text="Created On:"/>
                                        <Text text="{/selectedRequest/createdOn}"/>
                                        <Label text="Status:"/>
                                        <ObjectStatus text="{/selectedRequest/status}" 
                                            state="{= ${/selectedRequest/status} === 'Send Back' ? 'Warning' : ${/selectedRequest/status} === 'Rejected' ? 'Error' : ${/selectedRequest/status} === 'Pending Request' ? 'Information' : 'None'}" />
                                        <Label text="Remarks:"/>
                                        <TextArea value="{/selectedRequest/remarks}" rows="3" editable="{/editable}"/>
                                        <Label text="Pending With:"/>
                                        <Text text="{/selectedRequest/pendingWith}"/>
                                        <Label text="Request Aging:"/>
                                        <Text text="{/selectedRequest/requestAging}"/>
                                    </form:SimpleForm>
                                </IconTabFilter>
                                <IconTabFilter text="History" key="history" icon="sap-icon://hint">
                                    <suite:Timeline id="requestTimeline" axisOrientation="Vertical" enableDoubleSided="false">
                                        <suite:TimelineItem
                                            dateTime="Feb 02, 2025"
                                            title="Request Created"
                                            text="Request {selectedRequest/requestNo} created by Buyer"
                                            userName="Buyer"/>
                                        <suite:TimelineItem
                                            dateTime="Feb 03, 2025"
                                            title="Status Update"
                                            text="Request sent back for corrections"
                                            userName="Approver 1"
                                            status="Warning"/>
                                    </suite:Timeline>
                                </IconTabFilter>
                                <IconTabFilter text="Comments" key="comments" icon="sap-icon://comment">
                                    <List items="{/selectedRequest/comments}">
                                        <items>
                                            <CustomListItem>
                                                <VBox>
                                                    <Text text="{user}: {comment}" class="commentText"/>
                                                    <Text text="{timestamp}" class="commentTimestamp"/>
                                                </VBox>
                                            </CustomListItem>
                                        </items>
                                    </List>
                                    <Toolbar>
                                        <Input value="{/newComment}" placeholder="Add your comment..." width="100%"/>
                                        <Button icon="sap-icon://add" press="onAddComment" type="Transparent"/>
                                    </Toolbar>
                                </IconTabFilter>
                            </items>
                        </IconTabBar>
                    </VBox>
                </content>
                <beginButton>
                    <Button text="Submit" press="onSubmitRequest" type="Emphasized" visible="{/editable}"/>
                </beginButton>
                <endButton>
                    <Button text="Close" press="onCloseRequest" type="Reject"/>
                </endButton>
            </Dialog>

            <!-- Create Request Dialog -->
            <Dialog id="createRequestDialog" title="Create New Request" contentWidth="500px">
                <content>
                    <VBox class="sapUiSmallMargin">
                        <form:SimpleForm layout="ResponsiveGridLayout" editable="true">
                            <Label text="Request Type" required="true"/>
                            <ComboBox items="{/requestTypes}" selectedKey="{/newRequest/type}">
                                <core:Item key="{key}" text="{text}"/>
                            </ComboBox>
                            <Label text="Description"/>
                            <TextArea value="{/newRequest/description}" rows="3"/>
                            <Label text="Upload File"/>
                            <u:FileUploader
                                id="fileUploader"
                                name="requestFileUpload"
                                uploadUrl="upload/"
                                tooltip="Upload supporting documents"
                                uploadComplete="handleUploadComplete"
                                change="handleValueChange"
                                typeMissmatch="handleTypeMissmatch"
                                style="Emphasized"
                                fileType="txt,jpg,pdf,png"
                                placeholder="Choose a file to upload...">
                                <u:parameters>
                                    <u:FileUploaderParameter name="param1" value="value1"/>
                                </u:parameters>
                            </u:FileUploader>
                            <Button text="Upload File" press="handleUploadPress"/>
                        </form:SimpleForm>
                    </VBox>
                </content>
                <beginButton>
                    <Button text="Create" press="onCreateRequest" type="Emphasized"/>
                </beginButton>
                <endButton>
                    <Button text="Cancel" press="onCancelCreate" type="Reject"/>
                </endButton>
            </Dialog>
        </VBox>
    </Panel>
</mvc:View>
